<% include ./partials/header %>
<div class="ui main text container segment" style='margin-top:7em'>
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached segment">
        <div></div>
        	<div class="item">
	           <img class="ui centered rounded image" src="<%= blog.image %>">
	            <div class="content">
	                <div class="meta">
    	                <span><%= blog.created.toDateString() %></span>
	                </div>
            	     <div class="description">
            	        <p><%- blog.body %></p>
            	     </div>
            	     <a href="/blog/<%= blog._id %>/edit" class="ui inverted secondary button">Edit</a>
            	     <form action="/blog/<%= blog._id %>?_method=DELETE" method="POST" id="delete">
            	         <button id="delete" class="ui inverted red button">Delete</button>
            	     </form>
	            </div>
            </div>
    </div>
</div>

<% include ./partials/footer %>